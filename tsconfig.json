{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "ESNext",
		"target": "es5",
		"strict": true,
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/*.js",
		"./src/**/*.d.ts"
	],
	"exclude": ["node_modules", "dist", "webpack.config.js"]
}
