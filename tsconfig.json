{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "ESNext",
		"target": "es5",
		"strict": true,
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js"],
	"exclude": ["node_modules", "dist", "webpack.config.js"]
}
